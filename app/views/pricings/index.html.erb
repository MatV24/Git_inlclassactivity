<p id="notice"><%= notice %></p>

<h1>Pricings</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Quantitydiscount</th>
      <th>Vendor</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pricings.each do |pricing| %>
      <tr>
        <td><%= pricing.price %></td>
        <td><%= pricing.quantitydiscount %></td>
        <td><%= pricing.vendor.vendorname %></td>
        <td><%= pricing.product.productname %></td>
        <td><%= link_to 'Show', pricing %></td>
        <td><%= link_to 'Edit', edit_pricing_path(pricing) %></td>
        <td><%= link_to 'Destroy', pricing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

